<!-- Login Form -->
<div ng-controller="LoginFormController">
<form method="post" id="Login_Form" role="form" ng-submit="onSubmitLogin()">
	<div class="modal fade bs-login-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static">
	  <div class="modal-dialog modal-sm">
	    <div class="modal-content">
	    	<div class="modal-body">
	    		<h4>Login</h4>
	    		<div class="alert alert-success"><a href="#" class="alert-link"></a></div>
				<div class="alert alert-danger"><a href="#" class="alert-link"></a></div><br/>
	    		<div class="form-group">
				    <input type="text" class="form-control" ng-model="loginstring.username" placeholder="Username">
				 </div>	
				 <div class="form-group">
				    <input type="password" class="form-control" ng-model="loginstring.password" placeholder="Password">
				 </div>	
			</div>
	    	<div class="modal-footer"><button class="btn btn-primary btn_login_process">Sign In</button></div>
	    	</div>	    	
	    </div>
	  </div>
</form>
</div>
<!-- Logout Form -->
<div ng-controller="LogoutFormController">
	<form method="post" id="Logout_Form" role="form" ng-submit="onSubmitForm()">
		<div class="modal fade bs-logout-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static">
		  <div class="modal-dialog modal-sm">
		    <div class="modal-content">
		    	<div class="modal-body">
		    		<br/><br/>
						<h4>Are you sure you want to logout?</h4>					
		    	</div>
		    	<div class="modal-footer">
		    		<button class="btn btn-default" data-dismiss="modal">No</button>
		    		<button type="submit" class="btn btn-primary">Yes</button>					
		    	</div>
		    </div>
		  </div>
		</div>
	</form>
</div>